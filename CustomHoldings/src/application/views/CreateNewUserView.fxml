<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CreateNewUserController">
  <children>
    <MenuBar id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu id="sessionMenu" disable="true" mnemonicParsing="false" text="Session">
          <items>
            <MenuItem id="newSessionMenuItem" mnemonicParsing="false" text="New" />
            <MenuItem id="saveSessionMenuItem" mnemonicParsing="false" text="Save" />
            <MenuItem id="resumeSessionMenuItem" mnemonicParsing="false" text="Resume" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="logoutMenuitem" mnemonicParsing="false" text="Logout" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="closeMenuitem" mnemonicParsing="false" text="Close" />
          </items>
        </Menu>
        <Menu id="usersMenu" disable="true" mnemonicParsing="false" text="Users">
          <items>
            <MenuItem id="clearUsersMenuitem" mnemonicParsing="false" text="Clear Users" />
            <MenuItem id="currentUsersMenuitem" mnemonicParsing="false" text="Current Users" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="logoutMenuitem" mnemonicParsing="false" text="Logout" />
          </items>
        </Menu>
        <Menu id="pathsMenu" disable="true" mnemonicParsing="false" text="Paths">
          <items>
            <MenuItem id="newPathMenuitem" mnemonicParsing="false" text="New Path" />
            <MenuItem id="currentPathsMenuitem" mnemonicParsing="false" text="Current Paths" />
          </items>
        </Menu>
        <Menu id="groupsMenu" disable="true" mnemonicParsing="false" text="Groups">
          <items>
            <MenuItem id="newGroupMenuItem" mnemonicParsing="false" text="New Group" />
            <MenuItem id="currentGroupsMenu" mnemonicParsing="false" text="Current Groups" />
          </items>
        </Menu>
        <Menu id="helpMenu" mnemonicParsing="false" text="Help">
          <items>
            <MenuItem id="aboutMenuItem" mnemonicParsing="false" onAction="#about" text="About Custom Holdings" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane id="createNewUserPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <Label id="titleLabel" fx:id="titleLabel" alignment="CENTER" layoutX="20.0" layoutY="57.0" prefHeight="35.0" prefWidth="560.0" style="&#10;" text="Please Enter a Username and Password" textAlignment="CENTER" textFill="#9f9f9f" visible="true" wrapText="false">
          <font>
            <Font size="24.0" />
          </font>
        </Label>
        <Label id="usernameLabel" layoutX="79.0" layoutY="127.0" text="Enter Username:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextField id="usernameTextField" fx:id="usernameTextField" layoutX="204.0" layoutY="122.0" prefHeight="30.0" prefWidth="175.0">
          <font>
            <Font size="14.0" />
          </font>
        </TextField>
        <Label id="usernameInstructionsLabel" layoutX="405.0" layoutY="110.0" prefHeight="55.0" prefWidth="160.0" text="Usernames must be unique, alphanumeric, and contain no spaces." wrapText="true" />
        <Label id="passwordLabel" layoutX="81.0" layoutY="174.0" text="Enter Password:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <PasswordField id="passwordITextField" fx:id="passwordITextField" layoutX="204.0" layoutY="169.0" prefHeight="30.0" prefWidth="175.0">
          <font>
            <Font size="14.0" />
          </font>
        </PasswordField>
        <Label id="passwordInstructionsLabel" layoutX="405.0" layoutY="162.0" prefHeight="113.0" prefWidth="167.0" text="Passwords must be at least 12 characters long, alphanumeric, and contain at least one number, lower-case, and capital letters." wrapText="true" />
        <Label id="confirmPasswordLabel" layoutX="64.0" layoutY="223.0" text="Confirm Password:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <PasswordField id="confirmTextField" fx:id="confirmITextField" layoutX="204.0" layoutY="218.0" prefHeight="30.0" prefWidth="175.0">
          <font>
            <Font size="14.0" />
          </font>
        </PasswordField>
        <Button id="submitButton" layoutX="164.0" layoutY="278.0" mnemonicParsing="false" onAction="#validateLogin" text="Submit">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
        <Button id="cancelButton" layoutX="341.0" layoutY="278.0" mnemonicParsing="false" onAction="#cancelNewLogin" text="Cancel">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
