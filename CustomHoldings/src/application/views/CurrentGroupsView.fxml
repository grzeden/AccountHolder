<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.CurrentGroupsController">
  <children>
    <MenuBar id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu id="sessionMenu" disable="true" mnemonicParsing="false" text="Session">
          <items>
            <MenuItem id="saveMenuItem" mnemonicParsing="false" text="Save" />
            <MenuItem id="resumeMenuItem" mnemonicParsing="false" text="Resume" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="closeMenuitem" mnemonicParsing="false" text="Close" />
          </items>
        </Menu>
        <Menu id="usersMenu" disable="true" mnemonicParsing="false" text="Users">
          <items>
            <MenuItem id="clearUsersMenuitem" mnemonicParsing="false" text="Clear Users" />
            <MenuItem id="logoutUserMenuitem" mnemonicParsing="false" text="Logout" />
          </items>
        </Menu>
        <Menu id="pathsMenu" disable="true" mnemonicParsing="false" text="Paths">
          <items>
            <MenuItem id="newPathMenuitem" mnemonicParsing="false" text="New Path" />
            <Menu id="currentPathsMenu" mnemonicParsing="false" text="Current Paths" />
          </items>
        </Menu>
        <Menu id="groupsMenu" disable="true" mnemonicParsing="false" text="Groups">
          <items>
            <MenuItem id="newGroupMenuItem" mnemonicParsing="false" text="New Group" />
            <Menu id="currentGroupsMenu" mnemonicParsing="false" text="Current Groups" />
          </items>
        </Menu>
        <Menu id="helpMenu" mnemonicParsing="false" text="Help">
          <items>
            <MenuItem id="aboutMenuItem" mnemonicParsing="false" onAction="#about" text="About Custom Holdings" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane id="currentGroupPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <Label id="titleLabel" fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="26.0" prefHeight="35.0" prefWidth="560.0" text="Add A New Group" textFill="#9f9f9f">
          <font>
            <Font size="24.0" />
          </font>
        </Label>
        <TableView fx:id="currentUserGroupsTable" layoutX="123.0" layoutY="76.0" prefHeight="196.0" prefWidth="355.0">
          <columns>
            <TableColumn fx:id="nameCol" prefWidth="88.5" text="Name" />
            <TableColumn fx:id="descriptionCol" prefWidth="177" text="Description" />
            <TableColumn fx:id="pathNameCol" prefWidth="88.5" text="Path" />
          </columns>
        </TableView>
        <Button id="closeButton" layoutX="66.0" layoutY="304.0" mnemonicParsing="false" onAction="#saveEditedGroups" text="Save/Close">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
        <Button id="editButton" fx:id="editButton" disable="true" layoutX="273.0" layoutY="304.0" mnemonicParsing="false" onAction="#editGroup" text="Edit">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
        <Button id="deleteButton" fx:id="deleteButton" layoutX="440.0" layoutY="304.0" mnemonicParsing="false" onAction="#deleteSelectedGroup" text="Delete">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>