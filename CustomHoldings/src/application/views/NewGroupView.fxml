<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.NewGroupController">
  <children>
    <MenuBar id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu id="sessionMenu" disable="true" mnemonicParsing="false" text="Session">
          <items>
            <MenuItem id="saveMenuItem" mnemonicParsing="false" text="Save" />
            <MenuItem id="resumeMenuItem" mnemonicParsing="false" text="Resume" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="closeMenuitem" mnemonicParsing="false" text="Close" />
          </items>
        </Menu>
        <Menu id="usersMenu" disable="true" mnemonicParsing="false" text="Users">
          <items>
            <MenuItem id="clearUsersMenuitem" mnemonicParsing="false" text="Clear Users" />
            <MenuItem id="logoutUserMenuitem" mnemonicParsing="false" text="Logout" />
          </items>
        </Menu>
        <Menu id="pathsMenu" disable="true" mnemonicParsing="false" text="Paths">
          <items>
            <MenuItem id="newPathMenuitem" mnemonicParsing="false" text="New Path" />
            <Menu id="currentPathsMenu" mnemonicParsing="false" text="Current Paths" />
          </items>
        </Menu>
        <Menu id="groupsMenu" disable="true" mnemonicParsing="false" text="Groups">
          <items>
            <MenuItem id="newGroupMenuItem" mnemonicParsing="false" text="New Group" />
            <Menu id="currentGroupsMenu" mnemonicParsing="false" text="Current Groups" />
          </items>
        </Menu>
        <Menu id="helpMenu" mnemonicParsing="false" text="Help">
          <items>
            <MenuItem id="aboutMenuItem" mnemonicParsing="false" onAction="#about" text="About Custom Holdings" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane id="newGroupPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <Label id="titleLabel" fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="21.0" prefHeight="35.0" prefWidth="560.0" text="Add A New Group" textFill="#9f9f9f">
          <font>
            <Font size="24.0" />
          </font>
        </Label>
        <Label id="currentUserLabel" layoutX="102.0" layoutY="76.0" text="Current User:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextField id="currentUserTextField" fx:id="currentUserTextField" disable="true" editable="false" focusTraversable="false" layoutX="213.0" layoutY="71.0" prefHeight="30.0" prefWidth="175.0">
          <font>
            <Font size="14.0" />
          </font></TextField>
        <Label id="pathLabel" layoutX="86.0" layoutY="124.0" text="Available Paths:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <ComboBox id="pathComboBox" fx:id="pathComboBox" layoutX="213.0" layoutY="119.0" prefHeight="30.0" prefWidth="175.0" onAction="#pickPath" />
        <Label id="pathInstructionLabel" layoutX="420.0" layoutY="101.0" prefHeight="47.0" prefWidth="100.0" text="Select a Path to add your group to." wrapText="true" />
        <Label id="nameLabel" layoutX="68.0" layoutY="174.0" text="New Group Name:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextField id="nameTextField" fx:id="nameTextField" layoutX="213.0" layoutY="169.0" prefHeight="30.0" prefWidth="175.0" />
        <Label id="nameInstructionLabel" layoutX="420.0" layoutY="151.0" prefHeight="73.0" prefWidth="146.0" text="Give your group a name for the type of libraries that are included, like BKIFM3 or AVFREEI.L" wrapText="true" />
        <Label id="descriptionLabel" layoutX="39.0" layoutY="231.0" text="New GroupDescription:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextArea id="descriptionTextArea" fx:id="descriptionTextArea" layoutX="213.0" layoutY="220.0" prefHeight="90.0" prefWidth="175.0" />
        <Label id="descriptionInstructionLabel" layoutX="420.0" layoutY="232.0" prefHeight="39.0" prefWidth="146.0" text="Give your group a description." wrapText="true" />
        <Button id="saveButton" fx:id="saveButton" layoutX="122.0" layoutY="303.0" mnemonicParsing="false" onAction="#saveGroup" text="Save">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
        <Button id="cancelButton" fx:id="cancelButton" layoutX="422.0" layoutY="303.0" mnemonicParsing="false" onAction="#cancelGroup" text="Cancel">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
