<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.NewPathController">
  <children>
    <MenuBar id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu id="sessionMenu" disable="true" mnemonicParsing="false" text="Session">
          <items>
            <MenuItem id="saveMenuItem" mnemonicParsing="false" text="Save" />
            <MenuItem id="resumeMenuItem" mnemonicParsing="false" text="Resume" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="closeMenuitem" mnemonicParsing="false" text="Close" />
          </items>
        </Menu>
        <Menu id="usersMenu" disable="true" mnemonicParsing="false" text="Users">
          <items>
            <MenuItem id="clearUsersMenuitem" mnemonicParsing="false" text="Clear Users" />
            <MenuItem id="logoutUserMenuitem" mnemonicParsing="false" text="Logout" />
          </items>
        </Menu>
        <Menu id="pathsMenu" disable="true" mnemonicParsing="false" text="Paths">
          <items>
            <MenuItem id="newPathMenuitem" mnemonicParsing="false" text="New Path" />
            <Menu id="currentPathsMenu" mnemonicParsing="false" text="Current Paths" />
          </items>
        </Menu>
        <Menu id="groupsMenu" disable="true" mnemonicParsing="false" text="Groups">
          <items>
            <MenuItem id="newGroupMenuItem" mnemonicParsing="false" text="New Group" />
            <Menu id="currentGroupsMenu" mnemonicParsing="false" text="Current Groups" />
          </items>
        </Menu>
        <Menu id="helpMenu" mnemonicParsing="false" text="Help">
          <items>
            <MenuItem id="aboutMenuItem" mnemonicParsing="false" onAction="#about" text="About Custom Holdings" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane id="newPathPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <Label id="titleLabel" fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="26.0" prefHeight="35.0" prefWidth="560.0" text="Add A New Path" textFill="#9f9f9f">
          <font>
            <Font size="24.0" />
          </font>
        </Label>
        <Label id="currentUserLabel" layoutX="102.0" layoutY="86.0" text="Current User:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextField id="currentUserTextField" fx:id="currentUserTextField" disable="true" editable="false" focusTraversable="false" layoutX="213.0" layoutY="81.0" prefHeight="30.0" prefWidth="175.0">
          <font>
            <Font size="14.0" />
          </font></TextField>
        <Label id="nameLabel" layoutX="79.0" layoutY="134.0" text="New Path Name:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextField id="nameTextField" fx:id="nameTextField" layoutX="213.0" layoutY="129.0" prefHeight="30.0" prefWidth="175.0" />
        <Label id="nameInstructionsLabel" layoutX="416.0" layoutY="97.0" prefHeight="65.0" prefWidth="146.0" text="Give your path a name for a specific type of material, like BOOK or ARTICLE." wrapText="true" />
        <Label id="descriptionLabel" layoutX="46.0" layoutY="188.0" text="New Path Description:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextArea id="descriptionTextArea" fx:id="descriptionTextArea" layoutX="213.0" layoutY="180.0" prefHeight="90.0" prefWidth="175.0" />
        <Label id="descriptionInstructionsLabel" layoutX="416.0" layoutY="180.0" prefHeight="47.0" prefWidth="146.0" text="Give your path a description." wrapText="true" />
        <Button id="saveButton" fx:id="saveButton" layoutX="183.0" layoutY="303.0" mnemonicParsing="false" onAction="#savePath" text="Save">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
        <Button id="cancelButton" fx:id="cancelButton" layoutX="350.0" layoutY="303.0" mnemonicParsing="false" onAction="#cancelPath" text="Cancel">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
