<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.LoginController">
  <children>
    <MenuBar id="menuBar" VBox.vgrow="NEVER">
      <menus>
        <Menu id="sessionMenu" disable="true" mnemonicParsing="false" text="Session">
          <items>
            <MenuItem id="newSessionMenuItem" mnemonicParsing="false" text="New" />
            <MenuItem id="saveSessionMenuItem" mnemonicParsing="false" text="Save" />
            <MenuItem id="resumeSessionMenuItem" mnemonicParsing="false" text="Resume" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="logoutMenuItem" mnemonicParsing="false" text="Logout" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="closeMenuItem" mnemonicParsing="false" text="Close" />
          </items>
        </Menu>
        <Menu id="usersMenu" disable="true" mnemonicParsing="false" text="Users">
          <items>
            <MenuItem id="clearUsersMenuItem" mnemonicParsing="false" text="Clear Users" />
            <MenuItem id="currentUsersMenuItem" mnemonicParsing="false" text="Current Users" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem id="logoutMenuItem" mnemonicParsing="false" text="Logout" />
          </items>
        </Menu>
        <Menu id="pathsMenu" disable="true" mnemonicParsing="false" text="Paths">
          <items>
            <MenuItem id="newPathMenuItem" mnemonicParsing="false" text="New Path" />
            <MenuItem id="currentPathsMenuItem" mnemonicParsing="false" text="Current Paths" />
          </items>
        </Menu>
        <Menu id="groupsMenu" disable="true" mnemonicParsing="false" text="Groups">
          <items>
            <MenuItem id="newGroupMenuItem" mnemonicParsing="false" text="New Group" />
            <MenuItem id="currentGroupsMenuItem" mnemonicParsing="false" text="Current Groups" />
          </items>
        </Menu>
        <Menu id="helpMenu" mnemonicParsing="false" text="Help">
          <items>
            <MenuItem id="aboutMenuItem" mnemonicParsing="false" onAction="#about" text="About Custom Holdings" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane id="loginPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
        <Label id="titleLabel" fx:id="titleLabel" alignment="CENTER" layoutX="20.0" layoutY="57.0" prefHeight="35.0" prefWidth="560.0" style="&#10;" text="Please Login" textAlignment="CENTER" textFill="#9f9f9f" visible="true" wrapText="false">
          <font>
            <Font size="24.0" />
          </font>
        </Label>
        <Label id="usernameLabel" layoutX="120.0" layoutY="141.0" text="Username:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <TextField id="usernameTextField" fx:id="usernameTextField" layoutX="213.0" layoutY="136.0" prefHeight="30.0" prefWidth="175.0">
          <font>
            <Font size="14.0" />
          </font>
        </TextField>
        <Label id="passwordLabel" layoutX="122.0" layoutY="198.0" text="Password:">
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <PasswordField id="passwordTextField" fx:id="passwordTextField" layoutX="213.0" layoutY="193.0" prefHeight="30.0" prefWidth="175.0">
          <font>
            <Font size="14.0" />
          </font>
        </PasswordField>
        <Button id="submitButton" defaultButton="true" layoutX="173.0" layoutY="278.0" mnemonicParsing="false" onAction="#submitLogin" text="Submit">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
        <Button id="newUserButton" layoutX="338.0" layoutY="278.0" mnemonicParsing="false" onAction="#createNewUser" text="New User">
          <font>
            <Font size="18.0" />
          </font>
        </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
